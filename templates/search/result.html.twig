{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="title">Les résultats de votre recherches :</h1>
<section class="recettes">
<recette>
    <div class="row">    
    {% for recette in recettes %}        
        <div class="col tail">
            <div class="card position" style="width: 16rem;">
                <img src="{{ asset('uploads/' ~ recette.image)}}" class="card-img-top" alt="#">
                <div class="card-body">
                    <h5 class="card-title">{{ recette.title }}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Ecrit le {{ recette.createdAt | date('d/m/y') }} 
                        à {{ recette.createdAt | date('H:i') }}
                    </li>
                </ul>
                <div class="card-body">
                    <a href="{{ path('blog_show', {'id': recette.id}) }}" class="card-link">Voir la recette</a>
                </div>
            </div>
        </div>         
    {% endfor %}    
    </div>
        </recette>

</section> 

        <div class="search-button">
            <a href="{{ path('search') }}" class="btn btn-secondary btn-lg">Nouvelle recherche</a>
        </div>

{% endblock %}