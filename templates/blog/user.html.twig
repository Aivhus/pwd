{% extends 'base.html.twig' %}

{% block body %}
<h1 class="title">Nos utilisateurs</h1>
{% for user in users %}
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col"><i class="fas fa-arrow-alt-circle-right"></i></th>
                <th scope="col">Username</th>
                <th scope="col">E-mail</th>
                {# <th scope="col">Modifier</th> #}
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row"></th>
                <td> {{ user.username }} </td>
                <td> {{ user.email}} </td>
                {# <td><a href="{{ path('edit',{id: user.id}) }}" class="btn btn-success">edit</a></td> #}
                <td><a href="{{ path('removeUser', {id: user.id}) }}" class="btn btn-danger">remove</a></td>
            </tr>
        </tbody>
    </table>


{% endfor %}  

{% endblock %}