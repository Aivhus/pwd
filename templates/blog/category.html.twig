{% extends 'base.html.twig' %}

{% block body %}
{% for category in categories %}
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row"></th>
                <td> {{ category.title }} </td>
                <td><a href="{{ path('removeCategory', {id: category.id}) }}" class="btn btn-danger">remove</a></td>
            </tr>
        </tbody>
    </table>


{% endfor %}  
{% endblock %}