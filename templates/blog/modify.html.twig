{% extends 'base.html.twig' %}

{% block body %}
<h1 class="title">La boîte à recettes</h1>
{% for recette in recettes %}
<div class="table">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col"><i class="fas fa-arrow-alt-circle-right"></i></th>
                <th scope="col">Nom de la recette</th>
                <th scope="col">Créer le</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row"></th>
                <td> {{ recette.title }} </td>
                <td> {{ recette.createdAt |  date('d/m/Y')}} </td>
                <td><a href="{{ path('edit',{id: recette.id}) }}" class="btn btn-success">edit</a></td>
                <td><a href="{{ path('removeBlogPost', {id: recette.id}) }}" class="btn btn-danger">remove</a></td>
            </tr>
        </tbody>
    </table>
</div>

{% endfor %}    

{% endblock %}