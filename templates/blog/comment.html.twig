{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="title">Listes des commentaires :</h1>

    {% for comment in comments %}
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">content</th>
                <th scope="col">Créer le :</th>
                <th scope="col">à :</th>
                <th scope="col">Supprimer</th>                
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row"></th>
                <td> {{ comment.username }} </td>
                <td> {{ comment.content }} </td>
                <td> {{ comment.createdAt |  date('d/m/Y') }} </td>
                <td> {{ comment.createdAt | date('H:i') }} </td>
                <td><a href="{{ path('removeComment', {id: comment.id}) }}" class="btn btn-danger">remove</a></td>
            </tr>
        </tbody>
    </table>

{% endfor %}
{% endblock %}